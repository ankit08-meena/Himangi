<script>
let step = 0;
let audioUnlocked = false;

function playMeow(){
    const meow = document.getElementById("meowSound");
    meow.currentTime = 0;
    meow.play().catch(()=>{});
}

function nextStep(){
    const text = document.getElementById("text");
    const btn = document.getElementById("btn");

    // ğŸ”“ unlock audio on first click
    if(!audioUnlocked){
        playMeow();
        audioUnlocked = true;
    }

    if(step === 0){
        text.innerHTML = "Mana kiya tha na ğŸ˜’";
        btn.innerText = "OPEN AGAIN";
        step++;
    }
    else if(step === 1){
        text.innerHTML = "I LOVEEEEEEEE YOUUUUUUUUUUUUU â¤ï¸";
        btn.innerText = "NEXT";
        playMeow();
        startHearts();
        step++;
    }
    else if(step === 2){
        text.innerHTML = "Tu baccchee hai merii ğŸ¤ŒğŸ»â€¦<br>BaccheeğŸ¥²ğŸ«‚";
        btn.innerText = "OPEN";
        step++;
    }
    else if(step === 3){
        text.innerHTML = "IIII LOVEEEEE YOUUUU<br>BHTTTTT SARAAAAAAAAA ğŸ’–ğŸ’–ğŸ’–<br><br>HIMANGI ğŸ±â¤ï¸";
        btn.style.display="none";
        playMeow();
        setTimeout(playMeow,700); // second meow ğŸ˜„
        startHearts();
    }
}

function startHearts(){
    setInterval(()=>{
        const h=document.createElement("div");
        h.className="heart";
        h.innerHTML="â¤ï¸";
        h.style.left=Math.random()*100+"vw";
        document.body.appendChild(h);
        setTimeout(()=>h.remove(),5000);
    },300);
}
